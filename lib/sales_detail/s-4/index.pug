section.sales-detail-4
	.container
		.row
			.col
				.tagline-6
					.title
						h2 Cùng bộ sưu tập
		.row.products
			- var n = 1
			while n < 9
				.col-6.col-md-3
					.product
						figure
							.product-image
								img(src=`./img/sp/${n % 4 + 1}.png`, alt="")
							figcaption
								.product-title
									h3 kệ gunam 1
								.product-description
									p kt: 160 x 60 x 90cm
								.product-price
									p 15.500.000đ
							.product-onsales
								p -30%
							.product-controls
								a(href="javascript:void(0)") Thêm vào giỏ hàng
								a(href="javascript:void(0)") Chi tiết
				- n = n + 1
			